            <input type="text" class="form-control" onsubmit="return validateForm();" id="user_name" name="email" placeholder="email" method="post" required>
        </div>
        <div class="form-group">
            <input type="password" id="password" class="form-control" name="password" placeholder="Password" required>
        </div>
        <button type="submit" onClick="validateForm()" class="btn btn-default">Login</button>
    </form>


    <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search Projects">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
