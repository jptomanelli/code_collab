<link rel="stylesheet" type="text/css" href="../public/css/account.css">
<div class="container">
    <div class="jumbotron container" id="jumbotron" on>
        <div class="container">
        <center><h1 class="bd-title">Account</h1></center>
            <center><div class="image-circular">  <img src="http://pitchfork.com/features/cover-story/reader/daft-punk/images/pq1v2.jpg"/></div></center>
         
            <br>
            <br>
            <!-- Maybe add user ProfilePic ID to db - Use preset pictures? -->
            <form>
                    <!-- First and Last can't be edited upon account creation -->
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">First name</label>
                         <div class="col-sm-10">
                             <p class="form-control-static mb-0">{{user.first_name}}</p>
                        </div>     
                    </div>
                    <br>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Last name</label>
                    </div>   
                    <div class="form-group row">
                         <div class="col-sm-10">
                           <p class="form-control-static mb-0">{{user.last_name}}</p>
                         </div>
                    </div>  
            <!--End of First + Last-->
                <br>
            <!-- UserName -->
                 <!-- TODO : Add Top / Bot textfield - receiving data from database -->
            <div class="form-group row">      
                <label class='col-sm-2 col-form-label'>Username</label>
                
                  <div class="col-sm-10">
                    <p class="form-control-static mb-0">{{user.username}}</p> 
                   <button type="submit" onsubmit=placeHolderFunction() class="btn btn-primary btn-sm" >Change Username</button>
                  </div>
            </div>
                 
            <!-- Needed for spacing between -->    
           
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <p class="form-control-static mb-0">{{user.email}}</p>
                        </div>
                </div>      
            </form>
    </div>

</div>
